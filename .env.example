# Application
APP_NAME=MicroserviceDB
APP_VERSION=1.0.0
DEBUG=true

# Database Configuration
DB_ENGINE=sqlserver  # sqlserver, mysql, postgresql, oracle
DB_HOST=localhost
DB_PORT=1433  # Default ports: SQLServer=1433, MySQL=3306, PostgreSQL=5432, Oracle=1521
DB_NAME=microservice_db
DB_USER=sa
DB_PASSWORD=YourStrongPassword123
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# SQL Server specific
DB_DRIVER=ODBC+Driver+17+for+SQL+Server

# Oracle specific
DB_SERVICE_NAME=ORCL